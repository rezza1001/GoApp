<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imvw_icon"
        android:src="@drawable/ic_sending_sos"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:tint="#FF0000" />

    <TextView
        android:id="@+id/txvw_key"
        android:text="@string/date"
        android:textSize="12sp"
        android:textColor="#FFB1B1"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imvw_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txvw_value"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/textHint"
        android:text="20 Januari 2022"
        android:layout_alignStart="@+id/txvw_key"
        android:layout_below="@+id/txvw_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>